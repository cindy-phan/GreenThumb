<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <android.support.design.widget.TabLayout
            android:id="@+id/pages"
            android:layout_width="448dp"
            android:layout_height="wrap_content"
            android:background="@color/primaryGreenDark"
            app:tabIconTint="@android:color/background_light"
            app:tabMinWidth="140dp"
            app:tabMode="scrollable"
            app:tabTextColor="@android:color/background_light">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/my_plants"
                android:text="@string/my_plants" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/history_icon"
                android:text="@string/history" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/learn_more_icon"
                android:text="@string/learn_more" />
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/primaryGreenDark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:logo="@drawable/logo_icons" />
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_gravity="center"
        android:minHeight="250dp"
        tools:layout_editor_absoluteY="73dp">

        <Button
            android:id="@+id/button"
            android:layout_width="349dp"
            android:layout_height="202dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shadow"
            android:onClick="onClickAddPlant"
            android:text="@string/add_plant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>